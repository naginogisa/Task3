<body>
  <h1>Editing Book</h1>
  <%= form_for(@book) do |f| %>
    <div class=field>
      <label>Title</label>
      <%= f.text_field :title %>
    </div>
    
    <div class=field>
      <label>Body</label>
      <%= f.text_area :body %><br>
    </div>
    
    <div class=actions>
      <%= f.submit 'Update Book' %><br>
    </div>
    
    <%= link_to "Show", book_path(@book) %>
    |
    <%= link_to "Back", books_path %>
    
    <% end %>
  </body>