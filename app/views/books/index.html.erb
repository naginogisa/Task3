<h1>一覧</h1>
<div class="body">
<div class="col-xs-9">
  <h1>Books</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colespan="3"></th>
      </tr>
    </thead>
    <tbody>      
      <% @books.each do |book| %>
      <tr>
          <td><%= link_to book.title , book_path(book.id) %></td>
          <td><%= book.body %></td>
         
      </tr>
    <% end %>
    </tbody>
  </table>
  </div>

    <h2>New book</h2>
    <%= form_for(@book) do |f| %>
    
    <div class=field>
      <label>Title</label>
      <%= f.text_field :title %>
    </div>
    <div class=field>
      <label>Body</label>
      <%= f.text_area :body %>
    </div>
    <div class=actions>
      <%= f.submit 'Create Book' %>
    </div>
    <% end %>
   </div>