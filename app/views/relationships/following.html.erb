<h1>Follow Users</h1>
<table class="table table-hover table-inverse">
<thead>
   <tr>
     <th>image</th>
     <th>name</th>
     <th>フォロー数</th>
     <th>フォロワー数</th>
     <th colespan="3"></th>
   </tr>
 </thead>
  <tbody>      
   <% @followings.each do |following| %>
    <tr>
       <td>
       <%= attachment_image_tag following, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
       </td>
       <td><%= following.name %></td>   
       <td>
        <%= following.following_user.count %>フォロー中
      </td> 
       <td>  
        <%= following.follower_user.count %>フォロワー
       </td>
       <td><%= link_to "Show", user_path(following) %></td>
     </tr>
   <% end %>
 </tbody>
</table>